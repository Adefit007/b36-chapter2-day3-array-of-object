    <!-- Project Detail -->
    <div class="container-fluid">
      <div class="text-center mt-4">
        <h1>{{this.inputProjectName}}</h1>
      </div>
      <div class="container-fluid ms-2">
        <div class="d-flex row container-fluid p-3">
          <div class="col-md-8 px-3 py-3">
            <div class="container-fluid">
              <img
                src="../public/images/project-img.png.png"
                class="image-fluid mx-auto d-block"
                width="100%"
                alt=""
                id="detail-image-project"
              />
            </div>
          </div>
          <div class="col-md-4 px-4 py-3">
            <div class="text-start">
              <h3>Duration</h3>
              <div>
                <p class="fs-5">
                  <i class="fa-solid fa-calendar-days"></i>
                  {{this.startDate}}
                  <i><b> - </b></i>
                  {{this.endDate}}
                </p>
                <p class="fs-5">
                  <i class="fa-solid fa-clock-rotate-left"></i>
                  {{this.lengthDate.months}}
                  Bulan
                  {{this.lengthDate.days}}
                  Hari.
                </p>
              </div>
              <h3>Technologies</h3>
              <div class="d-flex fs-5">
                <div class="pe-3">
                  <p><i class="fa-brands fa-react"></i> React Js</p>
                  <p><i class="fa-brands fa-js-square"></i> Javascript</p>
                </div>
                <div class="ps-4">
                  <p><i class="fa-brands fa-node-js"></i> Node Js</p>
                  <p><i class="fa-brands fa-html5"></i> Html5</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="container-fluid text-justify px-5"
        style="text-align: justify"
